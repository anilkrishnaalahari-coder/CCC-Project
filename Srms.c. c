#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

// Function to check if roll number already exists
int rollExists(int r) {
    FILE *fp = fopen("students.dat", "rb");
    if (fp == NULL) return 0; // File doesn't exist, so roll is unique

    struct Student s;
    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == r) {
            fclose(fp);
            return 1;
        }
    }
    fclose(fp);
    return 0;
}

void add() {
    FILE *fp = fopen("students.dat", "ab");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return;
    }

    struct Student s;
    printf("Enter Roll: ");
    scanf("%d", &s.roll);

    if (rollExists(s.roll)) {
        printf("Roll number already exists! Try again.\n");
        fclose(fp);
        return;
    }

    printf("Enter Name: ");
    scanf(" %[^\n]", s.name);
    printf("Enter Marks: ");
    scanf("%f", &s.marks);

    if (fwrite(&s, sizeof(s), 1, fp) != 1)
        printf("Error writing to file!\n");
    else
        printf("Record added successfully.\n");

    fclose(fp);
}

void display() {
    FILE *fp = fopen("students.dat", "rb");
    if (fp == NULL) {
        printf("No records found.\n");
        return;
    }

    struct Student s;
    int count = 0;
    printf("\nRoll\tName\t\tMarks\n");
    printf("-------------------------------\n");
    while (fread(&s, sizeof(s), 1, fp)) {
        printf("%d\t%-15s\t%.2f\n", s.roll, s.name, s.marks);
        count++;
    }

    if (count == 0) printf("No records found.\n");
    fclose(fp);
}

void search() {
    FILE *fp = fopen("students.dat", "rb");
    if (fp == NULL) {
        printf("No records found.\n");
        return;
    }

    struct Student s;
    int r, found = 0;
    printf("Enter Roll to search: ");
    scanf("%d", &r);

    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == r) {
            printf("Record Found: %d %s %.2f\n", s.roll, s.name, s.marks);
            found = 1;
            break;
        }
    }

    if (!found) printf("Record not found.\n");
    fclose(fp);
}

void update() {
    FILE *fp = fopen("students.dat", "rb+");
    if (fp == NULL) {
        printf("No records found.\n");
        return;
    }

    struct Student s;
    int r, found = 0;
    printf("Enter Roll to update: ");
    scanf("%d", &r);

    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == r) {
            found = 1;
            printf("Enter new Name: ");
            scanf(" %[^\n]", s.name);
            printf("Enter new Marks: ");
            scanf("%f", &s.marks);

            fseek(fp, -sizeof(s), SEEK_CUR);
            fwrite(&s, sizeof(s), 1, fp);
            printf("Record updated successfully.\n");
            break;
        }
    }

    if (!found) printf("Record not found.\n");
    fclose(fp);
}

void deleteRecord() {
    FILE *fp = fopen("students.dat", "rb");
    if (fp == NULL) {
        printf("No records found.\n");
        return;
    }

    FILE *temp = fopen("temp.dat", "wb");
    if (temp == NULL) {
        printf("Error creating temporary file!\n");
        fclose(fp);
        return;
    }

    struct Student s;
    int r, found = 0;
    printf("Enter Roll to delete: ");
    scanf("%d", &r);

    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == r) {
            found = 1;
            printf("Record with Roll %d deleted.\n", r);
            continue; // Skip writing this record
        }
        fwrite(&s, sizeof(s), 1, temp);
    }

    if (!found) printf("Record not found.\n");

    fclose(fp);
    fclose(temp);

    remove("students.dat");
    rename("temp.dat", "students.dat");
}

int main() {
    int ch;
    do {
        printf("\n--- Student Record Management System ---\n");
        printf("1. Add Record\n2. Display Records\n3. Search Record\n4. Update Record\n5. Delete Record\n0. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1: add(); break;
            case 2: display(); break;
            case 3: search(); break;
            case 4: update(); break;
            case 5: deleteRecord(); break;
            case 0: printf("Exiting...\n"); break;
            default: printf("Invalid choice! Try again.\n");
        }
    } while (ch != 0);

    return 0;
}